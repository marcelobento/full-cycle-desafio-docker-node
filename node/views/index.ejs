<!DOCTYPE html>
<html lang="en">
<head>
  <title>Full-Cycle Desafio Node.</title>
  <style type="text/css">
    #peoples {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }
    #peoples td, #peoples th {
        border: 1px solid #ddd;
        padding: 8px;
    }
    #peoples tr:nth-child(even){background-color: #f2f2f2;}
    #peoples tr:hover {background-color: #ddd;}
    #peoples th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #e0ac00;
        color: white;
    }
  </style>
</head>
<body>
    <h1>Full Cycle Rocks!</h1>

    <table id="peoples">
        <tr>
            <th>#ID</th>
            <th>Name</th>
        </tr>
        <% if(results.length!=0){
            results.forEach(function(data){
        %>
        <tr>
            <td><%=data.id; %></td>
            <td><%=data.name %></td>
        </tr>
        <% }) } else { %>
            <tr>
                <td colspan="2">No Results!</td>
            </tr>
        <% } %>
    </table>
</body>
</html>